---
import Layout from '../layouts/Layout.astro';

const scriptCommand = 'curl -fsSL https://setup-scripts-website.vercel.app/setup.sh | bash'
---

<Layout title="Setup Scripts">
	<main>
		<h1>Setup Scripts</h1>
		<pre id="command" class="cursor-pointer">{scriptCommand}</pre>
	</main>
</Layout>

<script define:vars={{scriptCommand}}>
    const command = document.getElementById('command');

    command.addEventListener('click', async () => {
      await navigator.clipboard.writeText(command.innerText);

      command.innerText = 'Copied to clipboard!';

      setTimeout(() => {
        command.innerText = scriptCommand;
      }, 1000);
    });
</script>