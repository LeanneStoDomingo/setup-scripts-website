---
import ClickToCopy from "../components/ClickToCopy.astro";

const scripts = {
  Linux:
    '/bin/bash -c "$(curl -fsSL https://setup-scripts-website.vercel.app/setup.sh)"',
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Setup Scripts</title>
  </head>
  <body>
    <main class="m-5 flex flex-col items-center gap-12">
      <h1
        class="scroll-m-20 text-center text-4xl font-bold tracking-tight lg:text-5xl"
      >
        Setup Scripts
      </h1>
      <div class="flex flex-col items-center gap-4">
        {
          Object.entries(scripts).map(([os, scriptCommand]) => (
            <ClickToCopy os={os} scriptCommand={scriptCommand} />
          ))
        }
      </div>
    </main>
  </body>
</html>
